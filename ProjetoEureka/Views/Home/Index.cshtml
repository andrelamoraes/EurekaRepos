@using ProjetoEureka.Models;
 

@{
    var noticias = new List<Noticia>();
    noticias = ViewBag.ListaNoticia;

       ViewData["Title"] = "Home Page";
} 
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 correct">
                    <div class="c-blog__heading style-2 font-heading">
                        <h4>
                            <i class="ion-ios-flame"></i>
                            MAIS POPULARES
                        </h4>
                    </div>
                </div>
                <div class="container card-columns">
                    <div class="card" style="width: 10rem;">
                        <img class="card-img-top" src="http://eurekanimes.net/images/capa/91571.jpg" alt="Card image cap">
                        <div class="card-body">
                            Full Metal Alchemist
                        </div>
                    </div>
                    <div class="card" style="width: 10rem;">
                        <img class="card-img-top" src="http://eurekanimes.net/images/capa/91571.jpg" alt="Card image cap">
                        <div class="card-body">
                            Full Metal Alchemist
                        </div>
                    </div>
                </div>

                <div class="col-lg-9 correct">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="c-blog__heading style-2 font-heading">
                                <h4>
                                    <i class="ion-ios-star"></i>
                                    ÚLTIMAS NOTÍCIAS
                                </h4>
                            </div>
                            <div class="card-columns">
                                @foreach (var item in noticias)
                                {
                                    <div class="card">
                                        <img class="card-img-top" src="http://eurekanimes.net/modules/mod_news_pro_gk5/cache/noticias.ni_no_kuni_filmensp-139.jpg" alt="Card image cap">
                                        <div class="card-body">
                                            <h5 class="card-title">@Html.ActionLink(item.Titulo, "Index", "Noticia", new { id = item.Id , titulo = item.Titulo})</h5>
                                            <small class="text-muted">Categoria: @item.Categoria.Nome | @item.Data_criacao | Acessos: 200</small>
                                            <p class="card-text">@item.Descricao</p>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
                <!--Separador de conteudo-->
                <div class="col-lg-3 correct">
                    <h5 class="widget-heading">Teste</h5>

                    <h5 class="widget-heading">Temporada Atual</h5>

                    <h5 class="widget-heading">Facebook</h5>

                    <h5 class="widget-heading">Parceiros</h5>
                </div>
            </div>
